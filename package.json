{
  "name": "mrion",
  "version": "0.1.2",
  "description": "Electron-based Manga Reader app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "test-build": "electron-builder build --dir --publish never",
    "rebuild": "electron-builder install-app-deps",
    "deploy": "electron-builder build --win --publish always"
  },
  "build": {
    "appId": "com.mmfallacy.mrion",
    "productName": "MRION",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/img/icon.png",
      "publish": {
        "provider": "github",
        "owner": "mmfallacy",
        "repo": "mrion",
        "private": true
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mmfallacy/mrion.git"
  },
  "author": "mmfallacy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "electron-reload": "^1.5.0"
  },
  "dependencies": {
    "@panzoom/panzoom": "^4.1.0",
    "animejs": "^3.2.0",
    "axios": "^0.21.1",
    "cheerio": "^1.0.0-rc.3",
    "colors": "^1.4.0",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.1.1",
    "electron-updater": "^4.2.5",
    "electron-util": "^0.14.1",
    "fs": "0.0.1-security",
    "jquery": "^3.4.1",
    "knex": "^0.20.13",
    "moment": "^2.24.0",
    "mousetrap": "^1.6.5",
    "node-schedule": "^1.3.2",
    "os": "^0.1.1",
    "pastebin-js": "^1.0.4",
    "puppeteer": "^3.0.1",
    "split": "^1.0.1",
    "sqlite3": "^4.1.1",
    "uuid": "^7.0.3",
    "xmlhttprequest": "^1.8.0"
  }
}
